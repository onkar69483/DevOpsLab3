pipeline {
    agent {
        docker {
            image 'docker:28.3.2'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/onkar69483/DevOpsLab3.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t simple-app ./Onkar135_devops_lab/DevOpsExp1/simple-app'
            }
        }

        stage('Run App Container') {
            steps {
                sh 'docker run --rm simple-app'
            }
        }
    }
}
