pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                bat 'docker build -t simple-app ./Onkar135_devops_lab/DevOpsExp1/simple-app'
            }
        }

        stage('Run App Container') {
            steps {
                bat 'docker run --rm simple-app'
            }
        }
    }
}
